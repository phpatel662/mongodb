<article data-id={{_id}}>
    <img src={{imgSrc}} class="img-fluid">
    <div class="newsClipContainer">
        <div class="newsClip">
            <a href={{href}}>
                <h3 class="block">{{title}}</h3>
            </a>
            <span class="hidey">
                <p>{{summary}}</p>
                <br>
                <button type="button" class="btn btn-primary modalToggler" data-id={{_id}} data-toggle="modal"
                    data-target="#{{_id}}Modal">Join the discussion</a>
            </span>


        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="{{_id}}Modal" tabindex="-1" role="dialog" aria-labelledby="{{_id}}ModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="{{_id}}ModalLabel">{{title}}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <img src="{{imgSrc}}" class="img-fluid">
                    <small class="text-muted">{{summary}}</small>
                    <hr>
                    <h6>Comments</h6>
                    <div id="{{_id}}Comments">

                    </div>
                    <hr>
                    <form action="">
                        <div class="form-group">
                            <h6> <label for="noteInput">Leave a comment</label></h6>

                            <textarea id="{{_id}}noteInput" class="form-control" placeholder="Message"
                                aria-label="Message input" aria-describedby="noteInput"></textarea>

                        </div>

                        <button type="button" data-id={{_id}} class="saveNote btn btn-success float-right">Post</button>
                        <button type="button" class="btn btn-outline-secondary float-right mr-2"
                            data-dismiss="modal">Close</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</article>